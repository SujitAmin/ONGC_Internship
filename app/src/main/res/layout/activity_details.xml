<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f70505"
    tools:context="ongcphonebook.com.ongctelephone.Details">


    <Button
        android:id="@+id/button_email"
        android:layout_width="72sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:background="#5ab4b7"
        android:text="EMAIL"
        android:textColor="#1c8050" />

    <Button
        android:id="@+id/button_sms"
        android:layout_width="72sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/button_email"
        android:layout_toRightOf="@+id/button_email"
        android:background="#5ab4b7"
        android:text="SMS"
        android:textColorHint="#801619" />

    <Button
        android:id="@+id/button_mobile"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/button_sms"
        android:layout_toRightOf="@+id/button_sms"
        android:background="#5ab4b7"
        android:text="MOBILE CALL"
        android:textColorHint="#21803b" />

    <Button
        android:id="@+id/button_telephone"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:background="#5ab4b7"
        android:text="TELEPHONE " />

    <TextView
        android:id="@+id/Nam"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#071481"
        android:textColor="#ccd207" />

    <TextView
        android:id="@+id/ccc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Nam"
        android:layout_marginTop="23dp"
        android:text="CPF NO"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cpfee"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ccc"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/Designs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cpfee"
        android:layout_marginTop="12dp"
        android:text="DESIGNATION"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Design"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Designs"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Design"
        android:layout_marginTop="18dp"
        android:text="MOBILE NO"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mobii"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mobii"
        android:layout_marginTop="18dp"
        android:text="TELEPHONE"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tellee"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tellee"
        android:layout_marginTop="18dp"
        android:text="LOCATION"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Locate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView14" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Locate"
        android:layout_marginTop="15dp"
        android:text="EMAIL"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView16"
        android:layout_marginTop="11dp" />

</RelativeLayout>
